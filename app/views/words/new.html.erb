<h1>New Vocab Word</h1>
<%= form_for :word, url: words_path do |f| %>
  <p>
  <%= f.label :word  %><br>
  <%= f.text_field :word  %>
  </p>

  <p>
  <%= f.label :definition %><br>
  <%= f.text_area :definition %>
  </p>

  <p>
  <%= f.label :part_of_speech %>
  <%= f.select :part_of_speech, options_for_select([ 'Noun', 'Verb', 'Adjective'], 'Noun') %>

  <p>
  <%= f.submit %>
  </p>
<% end %>

