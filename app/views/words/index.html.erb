<h1>List of World</h1>
<%= link_to 'New Word', new_word_path %>
<table>
  <p>
  </p>
  <tr>
    <th>Word</th>
    <th>Definition</th>
    <th>Part Of Speech</th>
    <th colspan="3"></th>
  </tr>

  <% @words.each do |word| %>
    <tr>
      <td><%= word.word %></td>
      <td><%= word.definition%></td>
      <td><%= word.part_of_speech%></td>
      <td><%= link_to 'Show', word_path(word) %></td>
      <td><%= link_to 'Edit', edit_word_path(word) %></td>
      <td><%= link_to 'Destroy', word_path(word), 
        method: :delete, data: {confirm: 'Are you sure?'} %> </td>
    </tr>
  <% end %>
</table>
